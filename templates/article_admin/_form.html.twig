{{ form_start(form) }}
<div class="my-custom-class-for-errors">
    {{ form_errors(form) }}
</div>

<div>
    <div class="col">
        {{ form_row(form.title) }}
    </div>
</div>
<div>
    <div class="col">
        {{ form_row(form.content) }}
    </div>
</div>
<div>
    <div class="col">
        {{ form_row(form.author, {'attr': {'class': 'edit_article__author_email'}}) }}
    </div>
</div>
{% if form.publishedAt is defined %}
    <div>
        <div class="col">
            {{ form_row(form.publishedAt) }}
        </div>
    </div>
{% endif %}

<button type="submit" class="btn btn-primary">{{ button_title }}</button>
{{ form_end(form) }}