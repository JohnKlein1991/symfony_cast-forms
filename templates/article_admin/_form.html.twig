{{ form_start(form) }}
<div class="my-custom-class-for-errors">
    {{ form_errors(form) }}
</div>

<div>
    <div class="col">
        {{ form_row(form.title) }}
    </div>
</div>
<div>
    <div class="col">
        {{ form_row(form.content) }}
    </div>
</div>
<div>
    <div class="col">
        {{ form_row(form.author) }}
    </div>
</div>
<div>
    <div class="col">
        {{ form_row(form.publishedAt) }}
    </div>
</div>

<button type="submit" class="btn btn-primary">{{ button_title }}</button>
{{ form_end(form) }}